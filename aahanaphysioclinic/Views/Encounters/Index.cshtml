@model IEnumerable<aahanaphysioclinic.Model.Encounter>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <p class="mt-3">
        <a href="/Encounters/Create" >Create New Encounter</a>
    </p>
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>PatientId</th>
                    <th>Date</th>
                    <th>From</th>
                    <th>To</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EncounterId</td>
                        <td>@item.PatientId</td>
                        <td>@item.EncounterDate</td>
                        <td>@item.From</td>
                        <td>@item.To</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.EncounterId" class="btn btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.EncounterId" class="btn btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.EncounterId" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
