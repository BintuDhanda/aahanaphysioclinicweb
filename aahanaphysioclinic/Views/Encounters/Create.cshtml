@model aahanaphysioclinic.Model.Encounter

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    .form-container {
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
    }
</style>

<div class="container">
    <h1>Add Encounter</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="form-container">
                <form asp-action="Create">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="PatientId" class="control-label"></label>
                        <div class="input-group">
                            <input type="text" id="patientSearchInput" class="form-control" placeholder="Search Patient...">
                            <div class="input-group-append">
                                <button type="button" id="searchButton" class="btn btn-outline-secondary"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                        <label id="patientDetailsLabel"></label> <!-- Label to display PatientName & MobileNumber -->
                        <input type="hidden" id="patientId" asp-for="PatientId" /> <!-- Hidden input to store PatientId -->
                    </div>
                    <div class="form-group">
                        <label asp-for="EncounterName" class="control-label">Encounter Name</label>
                        <input asp-for="EncounterName" class="form-control" />
                        <span asp-validation-for="EncounterName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

<script>
    document.getElementById("searchButton").addEventListener("click", function () {
        var patientSearchInput = document.getElementById("patientSearchInput").value;
        fetch(`PatientDetails?mobileNo=${patientSearchInput}`)
            .then(response => {
                if (response.status === 204) {
                    document.getElementById("patientDetailsLabel").innerText = "Patient not found.";
                    throw new Error("Patient not found");
                }
                return response.json();
            })
            .then(data => {
                document.getElementById("patientDetailsLabel").innerText = `Patient Name: ${data.patientName}, Mobile Number: ${data.mobileNumber}`;
                document.getElementById("patientId").value = data.id; // Assuming id is the property for PatientId
            })
            .catch(error => {
                // Handle other errors here if needed
            });
    });
</script>
