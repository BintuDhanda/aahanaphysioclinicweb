@model aahanaphysioclinic.Model.Encounter

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    .form-container {
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin: 0 auto;
        max-width: 500px;
        background-color: #f8f9fa;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        font-size: 14px;
        border-radius: 3px;
        padding: 8px;
    }

    .btn-primary {
        font-size: 16px;
        padding: 8px 16px;
        border-radius: 3px;
    }

    .text-danger {
        font-size: 12px;
    }
</style>

<div class="container" style="margin-top:10px;">
    <h1 class="textGradient" style="text-align: center; font-size: 24px;">Add Encounter</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="form-container">
                <form asp-action="Create">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="PatientId" class="control-label"></label>
                        <div class="input-group">
                            <input type="text" id="patientSearchInput" class="form-control" placeholder="Search Patient...">
                            <div class="input-group-append">
                                <button type="button" id="searchButton" class="btn btn-outline-secondary"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                        <label id="patientDetailsLabel"></label> <!-- Label to display PatientName & MobileNumber -->
                        <input type="hidden" id="patientId" asp-for="PatientId" /> <!-- Hidden input to store PatientId -->
                    </div>
                    <div class="form-group">
                        <label asp-for="EncounterName" class="control-label">Encounter Name</label>
                        <input asp-for="EncounterName" class="form-control" />
                        <span asp-validation-for="EncounterName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Fees" class="control-label">Fees</label>
                        <input asp-for="Fees" class="form-control" />
                        <span asp-validation-for="Fees" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ExpectedDiagnosis" class="control-label">Expected Diagnosis</label>
                        <input asp-for="ExpectedDiagnosis" class="form-control" />
                        <span asp-validation-for="ExpectedDiagnosis" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" id="addButton" class="btn btn-primary" disabled><i class="fas fa-plus"></i> Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div style="text-align: center; margin-top: 20px;">
        <a asp-action="Index">Back to List</a>
    </div>
</div>

<script>
    document.getElementById("searchButton").addEventListener("click", function () {
        var patientSearchInput = document.getElementById("patientSearchInput").value;
        var patientDetailsLabel = document.getElementById("patientDetailsLabel");
        patientDetailsLabel.innerText = "Searching for patient...";
        document.getElementById("addButton").disabled = true; // Disable add button
        fetch(`PatientDetails?mobileNo=${patientSearchInput}`)
            .then(response => {
                if (response.status === 204) {
                    patientDetailsLabel.innerText = "Patient not found.";
                    throw new Error("Patient not found");
                }
                return response.json();
            })
            .then(data => {
                patientDetailsLabel.innerText = `Patient Name: ${data.patientName}, Mobile Number: ${data.mobileNumber}`;
                document.getElementById("patientId").value = data.id; // Assuming id is the property for PatientId
                document.getElementById("addButton").disabled = false; // Enable add button
            })
            .catch(error => {
                // Handle other errors here if needed
            });
    });
</script>
