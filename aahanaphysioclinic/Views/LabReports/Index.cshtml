@model IEnumerable<aahanaphysioclinic.Model.LabReport>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";

    // Get the query parameters
    var encounterId = ViewContext.HttpContext.Request.Query["EncounterId"];

}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">


<div class="container">
    <h1 class="textGradient text-center">Lab Reports</h1>

    <p>
        <a href="/LabReports/Create?EncounterId=@encounterId">Add New Report</a>
    </p>
    <table class="table" id="labReportTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EncounterId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LabReportType)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.UploadedOn)
                </th>
                <th>
                    File Link
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EncounterId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LabReportType)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.UploadedOn)
                    </td>
                    <td>
                        <a href="@item.FileId" target="_blank">View Report</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EncounterId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LabReportType)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.UploadedOn)
                </th>
                <th>
                    File Link
                </th>
                <th>Action</th>
            </tr>
        </tfoot>
    </table>
</div>


@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#labReportTable').DataTable();
        });
    </script>
}

