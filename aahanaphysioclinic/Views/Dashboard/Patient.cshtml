@model List<aahanaphysioclinic.Model.Patient>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <a href="@Url.Action("Create", "Patient")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Patient
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Mobile Number</th>
                    <th>Created On</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model)
                {
                    <tr>
                        <td><a href="@Url.Action("Edit", "Patient", new { id = patient.PatientId })">@patient.PatientId</a></td>
                        <td>@patient.PatientName</td>
                        <td>@patient.MobileNumber</td>
                        <td>@patient.CreatedOn</td>
                        <td>
                            <!-- Action buttons (if any) for each patient -->
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
