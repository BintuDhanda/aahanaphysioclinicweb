@model Package

@{
    ViewData["Title"] = "Package Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h3>Package Details</h3>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Patient.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patient.Name)
            </dd>
            <dt class="col-sm-2">
                Mobile Number
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patient.MobileNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Patient.Gender)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patient.Gender)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Patient.Occupation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patient.Occupation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Patient.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patient.Address),
                @Html.DisplayFor(model => model.Patient.City),
                @Html.DisplayFor(model => model.Patient.State),
                @Html.DisplayFor(model => model.Patient.PinCode),
            </dd>
            <dt class="col-sm-2">
                Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Timestamp)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Mode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Mode.Name)
            </dd>
            <dt class="col-sm-2">
                Transaction ID
            </dt>
            <dd class="col-sm-10">
                @(Model.TransactionId ?? "NA")
            </dd>
            <dt class="col-sm-2">
                Date
            </dt>
            <dd class="col-sm-10">
                @Model.Date.ToString().Substring(0, 10)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Index" asp-route-id="@Model.PatientId">Back to List</a>
    </div>
</div>