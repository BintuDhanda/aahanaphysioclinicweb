@model IEnumerable<AahanaClinic.Models.Package>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Payments";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Get the query parameters
    var yearParam = ViewContext.HttpContext.Request.Query["year"];
    var monthParam = ViewContext.HttpContext.Request.Query["month"];
    string[] symbols = { "😊", "😊", "😃", "😃", "😐", "😐", "😕", "😕", "😟", "😟", "😢", "😢" };
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

<div class="container">
    <h1 class="textGradient text-center">Packages</h1>

    <div class="row mb-3">
        <div class="col">
            <a href="/Packages/Create">Add New Package</a>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="table-responsive">
        <table id="packagesTable" class="table table-bordered table-striped table-responsive">
            <thead class="thead-dark">
                <tr>
                    <th>Patient</th>
                    <th>Date</th>
                    <th>Mode</th>
                    <th>Amount</th>
                    <th>Price/Visit</th>
                    <th>Visits</th>
                    <th>Balance Visits</th>
                    <th>Transaction Id</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Patient?.Name (@item.Patient.MobileNumber)</td>
                        <td>@item.Date.ToString().Substring(0, 10)</td>
                        <td>@item.Mode.Name</td>
                        <td>@item.Amount</td>
                        <td>@item.AveragePrice</td>
                        <td>@item.Visits</td>
                        <td>@item.VisitBalance</td>
                        <td>@(item.TransactionId ?? "NA")</td>
                        <td class="table-actions">
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            @if (item.VisitBalance == item.Visits)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-decoration-none">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="#" class="text-decoration-none delete-btn" data-id="@item.Id">
                                    <i class="fas fa-trash-alt text-danger"></i>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#packagesTable').DataTable();

            // Handle delete button click
            $('.delete-btn').click(function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                // Show confirmation dialog
                if (confirm('Are you sure you want to delete this package?')) {
                    // Make API call to delete payment
                    $.ajax({
                        url: '/Packages/Delete?id=' + id,
                        type: 'GET',
                        success: function (data, textStatus, xhr) {
                            if (xhr.status === 200) {
                                // Show success message
                                alert('Package deleted successfully!');
                                // Refresh the page after 1 second
                                setTimeout(function () {
                                    location.reload();
                                }, 100);
                            } else {
                                // Show error message
                                alert('Failed to delete package. Please try again.');
                            }
                        },
                        error: function () {
                            // Show error message
                            alert('Failed to delete package. Please try again.');
                        }
                    });
                }
            });
        });
    </script>
}
