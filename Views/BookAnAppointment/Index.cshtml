@model AahanaClinic.Models.BookAnAppointment

@{
    ViewData["Title"] = "Book an Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <div class="text-center">
                <img src="~/assets/DR-1024x1024.jpg" width="300" alt="Clinic Image" class="img-fluid rounded-circle shadow">
                <p class="mt-3 h5 text-primary"><i class="fas fa-phone-alt me-2"></i> Call us: <span class="fw-bold" name="phoneNumber">9991179300</span></p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-center textGradient">Book An Appointment</h4>
                    <hr>
                    <form asp-action="Index" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label">Name</label>
                            <input asp-for="Name" class="form-control" name="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="MobileNumber" class="control-label">Mobile Number</label>
                            <input asp-for="MobileNumber" class="form-control" name="MobileNumber" />
                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="AppointmentDate" class="control-label">Appointment Date</label>
                            <input asp-for="AppointmentDate" type="date" class="form-control" name="AppointmentDate" />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Book Now</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
