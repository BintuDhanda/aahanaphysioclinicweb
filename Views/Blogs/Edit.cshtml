@model BlogViewModel

@{
    ViewData["Title"] = "Blog Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Updated styles for smaller font size */
    .form-container {
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin: 0 auto;
        max-width: 900px; /* Increased max-width for two-column layout */
        background-color: #f8f9fa;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        font-size: 13px; /* Reduced font size */
        border-radius: 3px;
        padding: 8px;
    }

    .btn-primary {
        font-size: 16px;
        padding: 8px 16px;
        border-radius: 3px;
    }

    .text-danger {
        font-size: 12px;
    }

    /* Adjusted style for search button */
    .input-group {
        position: relative;
    }

    .input-group-append {
        position: absolute;
        right: 0;
        top: 0;
    }

    .btn-outline-secondary {
        margin-left: -35px; /* Adjust this value based on your layout */
    }

    .smiley {
        font-size: 32px; /* Larger smiley size */
    }
</style>

<div class="container" style="margin-top:10px;">
    <h1 class="textGradient text-center" style="font-size: 24px;">Edit Blog</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="form-container">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MetaTitle" class="control-label">Meta Title</label>
                        <input asp-for="MetaTitle" class="form-control" />
                        <span asp-validation-for="MetaTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MetaKeyword" class="control-label">Meta Keyword</label>
                        <input asp-for="MetaKeyword" class="form-control" />
                        <span asp-validation-for="MetaKeyword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MetaDescription" class="control-label">Meta Description</label>
                        <input asp-for="MetaDescription" class="form-control" />
                        <span asp-validation-for="MetaDescription" class="text-danger"></span>
                    </div>


                    <div class="mb-3 text-center">
                        <button type="submit" id="addButton" class="btn btn-primary"><i class="fas fa-plus"></i> Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
