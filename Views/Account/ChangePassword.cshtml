@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .custom-container {
        margin-top: 50px; /* Add margin from the top */
        margin-bottom: 50px; /* Add margin from the bottom */
    }

    /* Properly space button */
    .custom-form-group button {
        margin-top: 20px; /* Add margin from the top */
        margin-bottom: 20px; /* Add margin from the bottom */
    }
</style>

<div class="custom-container my-5">
    <div class="row justify-content-center">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4 textGradient">Change Password</h2>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="custom-form-group">
                            <label asp-for="CurrentPassword" class="control-label">Current Password</label>
                            <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Enter current password" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="custom-form-group">
                            <label asp-for="NewPassword" class="control-label">New Password</label>
                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter new password" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="custom-form-group">
                            <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm new password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="custom-form-group text-center">
                            <!-- Center align button -->
                            <button type="submit" class="btn custom-btn-primary text-white">Change Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
